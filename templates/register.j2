<!DOCTYPE html>
<html>
<link rel="stylesheet" href="{{ url_for('static', filename='styles.css') }}">
<title>Register</title> <!-- Browser tab name -->

<header>
    <h1>JRo's Liquor Extravaganza</h1> <!-- Sitewide header -->
</header>

<body>

    <h1>Register</h1> <!-- Page header -->

    <!-- Navigation bar to the other pages -->
    <a href="/">Home</a>

    <p></p>

    <form action="" method="post">

        {{ form.hidden_tag() }}

        <div>

            {{ form.username(placeholder="Username",
            style='width: 50%;
            font-weight: bold;
            padding: 12px 20px ;
            margin: 8px 0;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box') }}

            {% for error in form.username.errors %}

                <p>{{ error }}</p>

            {% endfor %}

        </div>

        <br>
        <div>

            {{ form.password_1(placeholder="Password",
            style='width: 50%;
            font-weight: bold;
            padding: 12px 20px ;
            margin: 8px 0;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box') }}

            {% for error in form.password_1.errors %}

                <p>{{ error }}</p>

            {% endfor %}

        </div>

        <br>

        <div>

            {{ form.password_2(placeholder="Confirm Password",
            style='width: 50%;
            font-weight: bold;
            padding: 12px 20px ;
            margin: 8px 0;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box') }}

            {% for error in form.password_2.errors %}

                <p>{{ error }}</p>

            {% endfor %}

        </div>

        <br>

        <div>

            {{ form.submit(
            style ='background-color: #4CAF50;
            color: white;
            width: 50%;
            padding: 14px 20px;
            margin: 8px 0;
            border: none;
            border-radius: 4px') }}

        </div>

    </form>

    {% if error %}

        <p class="error" style="color: red;"><strong>Error:</strong> {{ error }}
        
    {% endif %}

    <h3>Your password must contain the following:</h3>

    <ul>
        <li>Minimum of 12 characters</li>
        <li>1 or more uppercase letters</li>
        <li>1 or more lowercase letters</li>
        <li>1 or more numbers</li>
        <li>1 or more special characters</li>
    </ul>

    <p></p>

    <img src={{ image_file }} alt="Password Strength">

</body>

<footer class="page-footer">
