    <form action="" method="post">
        {{ form.hidden_tag() }}
        <div>
            {{ form.username(placeholder="username",
            style='width: 50%;
            font-weight: bold;
            padding: 12px 20px ;
            margin: 8px 0;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box') }}
            {% for error in form.username.errors %}
            <p>{{ error }}</p>
            {% endfor %}
        </div>
        <br>
        <div>
            {{ form.email(placeholder="email",
            style='width: 50%;
            font-weight: bold;
            padding: 12px 20px ;
            margin: 8px 0;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box') }}
            {% for error in form.email.errors %}
            <p>{{ error }}</p>
            {% endfor %}
        </div>
        <br>
        <div>
            {{ form.password1(placeholder="password",
            style='width: 50%;
            font-weight: bold;
            padding: 12px 20px ;
            margin: 8px 0;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box') }}
            {% for error in form.password1.errors %}
            <p>{{ error }}</p>
            {% endfor %}
        </div>
        <br>
        <div>
            {{ form.password2(placeholder="Confirm password",
            style='width: 50%;
            font-weight: bold;
            padding: 12px 20px ;
            margin: 8px 0;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box') }}
            {% for error in form.password2.errors %}
            <p>{{ error }}</p>
            {% endfor %}
        </div>
        <br>
        <div>{{ form.submit(
            style ='background-color: #4CAF50;
            color: white;
            width: 50%;
            padding: 14px 20px;
            margin: 8px 0;
            border: none;
            border-radius: 4px') }}
        </div>
    </form>

    {% if error %}

        <p class="error"><strong>Error:</strong> {{ error }}
        
    {% endif %}

    <h3>Your password must contain the following:</h3>

    <ul>
        <li>Minimum of 12 characters</li>
        <li>1 or more uppercase letters</li>
        <li>1 or more lowercase letters</li>
        <li>1 or more numbers</li>
        <li>1 or more special characters</li>
    </ul>

    <p></p>

    <img src={{ image_file }} alt="Password Strength">

</body>

